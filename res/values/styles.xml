<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_15_ffffff">
        <item name="android:textColor">@color/tab_text_color_selector</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_18_white">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_20_white">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/mycheckbox</item>
        <item name="android:paddingLeft">15.0dip</item>
    </style>

    <style name="MySpinner" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/myspinner</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="MySpinner1" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:background">@drawable/myspinner1</item>
        <item name="android:textSize">10sp</item>
    </style>
    <!-- 登陆页面checkbox样式 -->
    <style name="checkboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:paddingLeft">15dip</item>
    </style>

</resources>