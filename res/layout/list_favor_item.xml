<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:gravity="center_vertical"  
    android:orientation="horizontal" 
    >  
  
    <RelativeLayout
        android:id="@+id/id_favor_introdcue_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
         >
        
        <ImageView 
            android:id="@+id/id_favor_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ceshi_tu_01"
            />
        
        <TextView 
            android:id="@+id/id_favor_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_favor_image"
            android:layout_toRightOf="@+id/id_favor_image"
            android:layout_marginLeft="10dp"
            />
        
        <TextView 
            android:id="@+id/id_favor_sn_price_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_favor_name_text"
            android:layout_toRightOf="@+id/id_favor_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        
        <TextView 
            android:id="@+id/id_favor_detail_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/id_favor_sn_price_text"
            android:layout_toRightOf="@+id/id_favor_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        
        <TextView
            android:id="@+id/id_favor_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_favor_detail_text"
            android:layout_toRightOf="@+id/id_favor_image"
            android:background="@drawable/shou_phone"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="@string/merchant_dial_text"
            android:textColor="@color/white" />
        
        <TextView 
            android:id="@+id/id_favor_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_favor_detail_text"
            android:layout_toRightOf="@+id/id_favor_dial"
            android:background="@drawable/wishlist"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
  
</LinearLayout>  
