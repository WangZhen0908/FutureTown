                <Button
                    android:id="@+id/id_merchant_lbs"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/denglu_sure_bg"
                    android:text="@string/merchant_lbs_text"
