<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/shou_tu"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/bg" />
    <TextView 
        android:id="@+id/shou_pinming"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/shou_tu"
       android:layout_marginLeft="10dp"
        />
    <TextView 
        android:id="@+id/shou_bianhao"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/shou_tu"
       android:layout_below="@id/shou_pinming"
       android:layout_marginLeft="10dp"
        />
     <TextView 
        android:id="@+id/shou_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
       android:layout_toRightOf="@id/shou_tu"
       android:layout_below="@id/shou_bianhao"
       android:layout_marginLeft="10dp"
        />
    <Button 
        android:id="@+id/shou_phone"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/shou_tu"
       android:layout_below="@id/shou_xiangqing"
       android:layout_marginLeft="10dp"
       android:background="@drawable/shou_phone_03"
       android:text="拨电话"
         android:textColor="@android:color/white"
          android:textSize="15sp"
        />
      <Button 
        android:id="@+id/shou_cangb"
        android:layout_width="30dp"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/shou_phone"
       android:layout_below="@id/shou_xiangqing"
       android:layout_marginLeft="10dp"
       android:background="@drawable/cang"
      
         android:textColor="@android:color/white"
        
        />
    
    

</RelativeLayout>