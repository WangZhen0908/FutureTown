<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg"
     >

         <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/header_bg" >

        <Button
            android:id="@+id/userorder_back_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:background="@drawable/pai_deng"
            android:gravity="center"
            android:text="返回"
            android:textColor="@android:color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/userorder_manage"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/press"
                android:text="订单管理"
                android:textColor="@android:color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/userorder_huifu"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/press_nor"
                android:text="商家回复"
                android:textColor="@android:color/white"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp" >

                <ImageView
                    android:id="@+id/uo_im"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg" />

                <TextView
                    android:id="@+id/uo_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/uo_im"
                    android:text="店名:" />

                <TextView
                    android:id="@+id/uo_bianhao"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_below="@id/uo_name"
                    android:layout_toRightOf="@id/uo_im"
                    android:text="编号:" />

                <TextView
                    android:id="@+id/uo_add"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uo_bianhao"
                    android:layout_toRightOf="@id/uo_im"
                    android:text="dsfdsf" />

                <TextView
                    android:id="@+id/uo_shu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/uo_add"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/uo_im"
                    android:text="订单总额" />

                <Button
                    android:id="@+id/uo_boda"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_below="@id/uo_add"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/uo_shu"
                    android:background="@drawable/order_pnone"
                    android:text="拔打号码"
                    android:textColor="@android:color/white"
                    android:textSize="15dp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/uo_lv"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:divider="#000000"
                android:dividerHeight="0dp" >
            </ListView>

            <Button
                android:id="@+id/uo_button1"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/order_pnone"
                android:text="选择收货地址"
                android:textColor="@android:color/white"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/uo_shouhuoren"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="dsfsfdsf" />

                <TextView
                    android:id="@+id/uo_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:text="dsfsfdsf" />
            </LinearLayout>

            <TextView
                android:id="@+id/uo_add2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:id="@+id/uo_fuyan"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/fuyan"
                android:hint="附言：这件商品真真好呀，长方形浅底木条编制的粗篮"
                android:textSize="15dp" 
                android:gravity="top"
                />

            <Button
                android:id="@+id/uo_xiadan"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_margin="10dp"
               
                
                android:background="@drawable/bianji_goods"
                android:text="下单"
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>