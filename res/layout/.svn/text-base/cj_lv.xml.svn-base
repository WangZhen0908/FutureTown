<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <ImageView
        android:id="@+id/cj_tu"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/bg"
        android:scaleType="fitXY"
         />
    <TextView 
        android:id="@+id/cj_pinming"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/cj_tu"
       android:layout_marginLeft="10dp"
        />
    <TextView 
        android:id="@+id/cj_bianhao"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
       android:layout_toRightOf="@id/cj_tu"
       android:layout_below="@id/cj_pinming"
       android:layout_marginLeft="10dp"
        />
     <TextView 
        android:id="@+id/cj_xiangqing"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
       android:layout_toRightOf="@id/cj_tu"
       android:layout_below="@id/cj_bianhao"
       android:layout_marginLeft="10dp"
        />
 <TextView 
        android:id="@+id/cj_jiang"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
       android:layout_toRightOf="@id/cj_tu"
       android:layout_below="@id/cj_xiangqing"
       android:layout_marginLeft="10dp"
       android:layout_marginTop="10dp"
        />
</RelativeLayout>