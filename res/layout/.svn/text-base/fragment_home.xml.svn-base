<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_titleview"
        android:gravity="center_vertical"
        android:padding="8dp" >

        <TextView
            android:id="@+id/id_login"
            style="@style/text_18_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableBottom="@drawable/arrow_down"
            android:text="@string/login" />
        
     	<LinearLayout
            android:id="@+id/id_search"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:background="@drawable/search_bg"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"  >
     	    
 	    <ImageView
            android:id="@+id/id_search_searchimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:background="@drawable/icon_search"/>
 	    
     	<EditText
            android:id="@+id/id_search_editview"
            android:layout_gravity="center_vertical"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@null" 
            android:singleLine="true"
            android:hint="@string/hint"
            android:textColorHint="@color/gray"
            android:layout_weight="1"
            /> 
       
     	<TextView
            android:id="@+id/id_search_spinner_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:textColor="@color/gray"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            />
     	    
     	</LinearLayout>
     	
   	<LinearLayout 
   	    android:id="@+id/id_search_button"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:gravity="right"
   	    >
	     <TextView
	         android:id="@+id/btn_search"
	         style="@style/text_18_white"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:background="@drawable/bg_btn"
	         android:padding="3dp"
	         android:text="@string/search" />
     	    
     	</LinearLayout>
       
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
         >
		<com.vvage.futuretown.view.MyLocationMapView
            android:id="@+id/bmapsView"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:clickable="true"
            />
        
        <kankan.wheel.widget.WheelView
            android:id="@+id/picker"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            android:layout_gravity="center_vertical" 
            />
    </RelativeLayout>

</LinearLayout>