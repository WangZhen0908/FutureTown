<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp" >

        <ImageView
            android:id="@+id/chou_tu"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/bg"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/chou_pinming"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chou_tu" />

        <TextView
            android:id="@+id/chou_bianhao"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/chou_pinming"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chou_tu" />

        <TextView
            android:id="@+id/chou_xiangqing"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_below="@id/chou_bianhao"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chou_tu" />

        <Button
            android:id="@+id/chou_phone"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@id/chou_xiangqing"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chou_tu"
            android:background="@drawable/choujiang_btn"
            android:text="抽奖"
            android:textColor="@android:color/white"
            android:textSize="15dp" />

        <Button
            android:id="@+id/shou_cangb"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_below="@id/chou_xiangqing"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/chou_phone"
            android:background="@drawable/chou_cang"
            android:textColor="@android:color/white" />
    </RelativeLayout>

</RelativeLayout>