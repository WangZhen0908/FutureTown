<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
android:layout_margin="10dp"
    >
    <ImageView
        android:id="@+id/yg_lv_im"
        android:layout_width="120dp"
        android:layout_height="100dp"
        
        android:scaleType="fitXY"
        />

<TextView 
    android:id="@+id/yg_lv_goodsname"
    android:layout_width="wrap_content"
     android:layout_height="20dp"
    android:layout_toRightOf="@id/yg_lv_im"
	 android:layout_marginLeft="10dp"
	android:layout_marginTop="10dp"
		android:text="品名"
		
    />

<TextView 
    android:id="@+id/yg_lv_price"
    android:layout_width="fill_parent"
    android:layout_height="20dp"
    android:layout_toRightOf="@id/yg_lv_im"
    android:layout_below="@id/yg_lv_goodsname"
 android:layout_marginLeft="10dp"
	android:layout_marginTop="10dp"
	android:text="价格"
    />

<Button
    android:id="@+id/yg_lv_bianji"
    android:layout_width="40dp"
    android:layout_height="25dp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
    android:layout_below="@id/yg_lv_price"
  android:layout_toRightOf="@id/yg_lv_im"
    android:background="@drawable/bianji_goods"
    android:text="编辑"
    android:textColor="@android:color/white"
    android:textSize="15dp" />

<Button
    android:id="@+id/yg_lv_shanbtn"
    android:layout_width="40dp"
    android:layout_height="25dp"
      android:layout_margin="10dp"
    android:layout_below="@+id/yg_lv_price"
    android:layout_toRightOf="@+id/yg_lv_bianji"
    android:background="@drawable/choujiang_btn"
    android:text="删除"
    android:textColor="@android:color/white"
    android:textSize="15dp" />
    <Button
    android:id="@+id/yg_lv_xia"
    android:layout_width="40dp"
     android:layout_height="25dp"
      android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
    android:layout_below="@+id/yg_lv_price"
    android:layout_toRightOf="@+id/yg_lv_shanbtn"
    android:background="@drawable/shanchu_goods"
    android:text="下架"
    android:textColor="@android:color/white"
    android:textSize="15dp" />
</RelativeLayout>

</LinearLayout>