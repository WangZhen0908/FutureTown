<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:gravity="center_vertical"  
    android:orientation="horizontal" 
    >  
  
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
         >
        
        <ImageView
            android:id="@+id/id_merchant_list_item_imageview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ceshi_tu_01" />
        
        <TextView 
            android:id="@+id/id_merchant_list_item_goods_name_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_merchant_list_item_imageview"
            android:layout_toRightOf="@+id/id_merchant_list_item_imageview"
            android:layout_marginLeft="10dp"
            />
        
        <TextView 
            android:id="@+id/id_merchant_list_item_price_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/id_merchant_list_item_goods_name_text"
            android:layout_toRightOf="@+id/id_merchant_list_item_imageview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />
        
        <TextView 
            android:id="@+id/id_merchant_list_item_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_merchant_list_item_goods_name_text"
            android:layout_toRightOf="@+id/id_merchant_list_item_price_text"
            android:layout_marginLeft="20dp"
            android:background="@drawable/un_wishlist"
            android:layout_marginTop="3dp"
            />
        
        <TextView 
            android:id="@+id/id_merchant_list_item_goods_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_merchant_list_item_price_text"
            android:layout_toRightOf="@+id/id_merchant_list_item_imageview"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            />
        
        <TextView 
            android:id="@+id/id_merchant_list_item_goods_purpose_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/id_merchant_list_item_goods_detail"
            android:layout_toRightOf="@+id/id_merchant_list_item_imageview"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bu"
            android:textColor="@color/white"
            android:text="询  价"
            android:layout_marginTop="3dp"
            />
        
         <TextView 
            android:id="@+id/id_merchant_list_item_dail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/id_merchant_list_item_goods_detail"
            android:layout_toRightOf="@+id/id_merchant_list_item_goods_purpose_type"
            android:background="@drawable/bu"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:text="拨电话"
            android:layout_marginTop="3dp"
            />
        
        
        

    </RelativeLayout>
  
</LinearLayout>  

