    <RelativeLayout
        android:id="@+id/id_merchant_introdcue_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
         >
        
        <ImageView 
            android:id="@+id/id_merchant_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ceshi_tu_01"
            android:scaleType="fitCenter"
            />
        
        <TextView 
            android:id="@+id/id_merchant_introduce_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/id_merchant_image"
            android:layout_toRightOf="@+id/id_merchant_image"
            android:layout_marginLeft="10dp"
            />
        
        <TextView 
            android:id="@+id/id_merchant_identifier_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/id_merchant_introduce_text"
            android:layout_toRightOf="@+id/id_merchant_image"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            />
        
        <TextView
            android:id="@+id/id_merchant_dial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_merchant_identifier_text"
            android:layout_toRightOf="@+id/id_merchant_image"
            android:background="@drawable/shou_phone"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:text="@string/merchant_dial_text"
            android:textColor="@color/white" />
        
        <TextView 
            android:id="@+id/id_merchant_wishlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_merchant_identifier_text"
            android:layout_toRightOf="@+id/id_merchant_dial"
            android:background="@drawable/un_wishlist"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>
    
    <ListView 
        android:id="@+id/id_merchant_goods_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:cacheColorHint="#00000000"
        ></ListView>
    
