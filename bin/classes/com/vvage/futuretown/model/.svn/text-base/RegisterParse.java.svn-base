package com.vvage.futuretown.model;

import org.json.JSONException;
import org.json.JSONObject;

import com.vvage.futuretown.Global;
import com.vvage.futuretown.network.Http.ErrorMsg;

public class RegisterParse extends BaseJsonReader {

	String phone;
	String password;
	String phone_code;

	/*
	 * JSON解析
	 */

	public String status;
	public String msg;

	public RegisterParse(String phoneNum, String password, String phone_code) {
		this.phone = phoneNum;
		this.password = password;
		this.phone_code = phone_code;
	}

	@Override
	public String getUrl() {
		// TODO Auto-generated method stub
		return Global.URL + "mod=account_api&code=Register_done&phone=" + phone
				+ "&password=" + password+ "&phone_code=" + phone_code;
	}

	@Override
	public void read(String str) throws ErrorMsg {
		// TODO Auto-generated method stub
		try {
			JSONObject jsonObject = new JSONObject(str);

			status = jsonObject.getString("status");
			msg = jsonObject.getString("msg");
		} catch (JSONException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
